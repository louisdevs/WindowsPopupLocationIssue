<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WindowsPopupLocationIssue.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <Grid Padding="30,0" ColumnDefinitions="*, Auto">
            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                Text="Show popup" />
            <Label
                x:Name="anchor"
                Grid.Column="1"
                Text="Anchor" />
        </Grid>
    </ScrollView>

</ContentPage>
